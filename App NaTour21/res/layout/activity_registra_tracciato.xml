<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.RegistraTracciatoActivity"
    android:fitsSystemWindows="true"
    android:theme="@style/Theme.NaTour.NoActionBar">

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapViewRegistra"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        mapbox:layout_constraintBottom_toBottomOf="parent"
        mapbox:layout_constraintEnd_toEndOf="parent"
        mapbox:layout_constraintHorizontal_bias="0.0"
        mapbox:layout_constraintStart_toStartOf="parent"
        mapbox:layout_constraintTop_toTopOf="parent"
        mapbox:layout_constraintVertical_bias="0.0"
        mapbox:mapbox_cameraTargetLat="40.83892324381177"
        mapbox:mapbox_cameraTargetLng="14.185021149735194"
        mapbox:mapbox_cameraZoom="12">

    </com.mapbox.mapboxsdk.maps.MapView>

    <Button
        android:id="@+id/btnIniziaARegistrare2"
        android:layout_width="173dp"
        android:layout_height="33dp"
        android:background="@drawable/button_rounded"
        android:enabled="true"
        android:text="@string/btnIniziaARegistrare2"
        android:textColor="@color/white"
        mapbox:layout_constraintBottom_toBottomOf="parent"
        mapbox:layout_constraintEnd_toStartOf="@+id/btnStopRegistrazione"
        mapbox:layout_constraintStart_toStartOf="parent"
        mapbox:layout_constraintTop_toBottomOf="@+id/mapViewRegistra"
        mapbox:layout_constraintVertical_bias="0.5"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btnStopRegistrazione"
        android:layout_width="173dp"
        android:layout_height="33dp"
        android:background="@drawable/button_rounded_grey"
        android:enabled="false"
        android:text="@string/btnStopRegistrazione"
        android:textColor="@color/white"
        mapbox:layout_constraintBottom_toBottomOf="parent"
        mapbox:layout_constraintEnd_toEndOf="parent"
        mapbox:layout_constraintStart_toEndOf="@+id/btnIniziaARegistrare2"
        mapbox:layout_constraintTop_toBottomOf="@+id/mapViewRegistra"
        mapbox:layout_constraintVertical_bias="0.5"
        tools:ignore="TouchTargetSizeCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>