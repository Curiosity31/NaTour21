<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.VerificationFragment">

    <EditText
        android:id="@+id/etVerify"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="20dp"
        android:autofillHints=""
        android:backgroundTint="@color/verde_chiarissimo"
        android:ems="10"
        android:hint="@string/ConfCode"
        android:inputType="number"
        android:minHeight="48dp"
        android:textColor="@color/grey"
        android:textColorHint="@color/grey"
        app:layout_constraintBottom_toTopOf="@+id/btnResendCode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_sigla"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/btnResendCode"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="30dp"
        android:background="@color/verde_scuro"
        android:text="@string/Resend"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/btnVerify"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etVerify"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/btnVerify"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="30dp"
        android:background="@color/verde_scuro"
        android:text="@string/Verify"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnResendCode"
        app:layout_constraintVertical_bias="0.422"
        tools:ignore="TextContrastCheck" />

    <ImageView
        android:id="@+id/imageView_sigla"
        android:layout_width="0dp"
        android:layout_height="309dp"
        android:src="@drawable/logo_natour_sigla_2000ppi_big"
        app:layout_constraintBottom_toBottomOf="@+id/etVerify"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.321"
        android:contentDescription="@string/Logo" />

</androidx.constraintlayout.widget.ConstraintLayout>